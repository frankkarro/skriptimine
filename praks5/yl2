#!/bin/bash
#
#sisseehitatud if lause n채ide
#arv on pos, neg voi null
#
#kasutaja sisend
echo -n "Sisesta suvaline t채isarv:"
read arv
#kontrollime kas arv on pos suurem v천i v천rdne nulliuga
if [ $arv -ge 0 ] ; then
	if [ $arv -eq 0 ] ; then
	echo "$arv on null"
	else
		echo "$arv -positiivne"
	fi
else
	echo "$arv on negatiivne"
fi
	
